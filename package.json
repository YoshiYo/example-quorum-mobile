{
  "name": "quorum-mobile",
  "version": "0.0.0-development",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "codacy-coverage": "^3.0.0",
    "detox": "^8.1.1",
    "detox-expo-helpers": "^0.2.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "fetch-mock": "^6.5.2",
    "husky": "^0.14.3",
    "jest-expo": "~27.0.0",
    "react-dom": "^16.4.1",
    "react-native-debugger-open": "^0.3.17",
    "react-native-scripts": "1.14.0",
    "react-test-renderer": "16.3.1",
    "redux-devtools-extension": "^2.13.5",
    "redux-mock-store": "^1.5.3",
    "semantic-release": "^15.9.1"
  },
  "main": "./index.js",
  "scripts": {
    "start": "react-native-scripts start",
    "start:debug": "rndebugger-open --open --expo && npm start",
    "eject": "react-native-scripts eject",
    "android": "react-native-scripts android",
    "ios": "react-native-scripts ios",
    "test": "jest",
    "semantic-release": "semantic-release",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "e2e": "detox test --configuration ios.sim",
    "test-with-coverage": "jest --coverage && cat ./coverage/lcov.info | codacy-coverage --token b17bfafc2dbb472882692da7d6fb3e66",
    "postinstall": "rndebugger-open"
  },
  "jest": {
    "preset": "react-native",
    "testRegex": "./__tests__/.*.js$",
    "globals": {
      "window": true
    },
    "coverageReporters": [
      "html",
      "text",
      "cobertura"
    ],
    "collectCoverageFrom": [
     "src/**/*.js"
   ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "ex-react-native-i18n": "^0.0.4",
    "expo": "^27.0.1",
    "prop-types": "^15.6.2",
    "react": "16.3.1",
    "react-native": "~0.55.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-axios-middleware": "^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "release": {
    "branch": "master"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/YoshiYo/example-quorum-mobile.git"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "__e2e__/config.json",
    "specs": "e2e",
    "configurations": {
      "ios.sim": {
        "binaryPath": "bin/Exponent.app",
        "type": "ios.simulator",
        "name": "iPhone 7"
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/quorum-mobile.app",
        "build": "xcodebuild -project ios/quorum-mobile.xcodeproj -scheme quorum-mobile -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    }
  }
}
